@model Catedra.Models.ProductModelo

@{
    ViewData["Title"] = "Actualización";
    var paises = ViewData["Paises"] as List<PaisModelo>;
}
<style>
    .contenido {
        width: 700px;
    }

    .centering-content {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<h1>Actualizar recurso</h1>

<hr />

<div class="card">
    <div class="card-header">
        Actualizacioón de un recurso
    </div>

    <div class="centering-content">
        <div class="contenido">
            <form asp-action="UpdateData" asp-controller="Product" method="post">
                <input type="hidden" asp-for="IdRecurso" class="form-control" aria-describedby="emailHelp">

                <!--
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="display: none;">
                    <label asp-for="IdRecurso" class="control-label"></label>
                    <input asp-for="IdRecurso" class="form-control" />
                    <span asp-validation-for="IdRecurso" class="text-danger"></span>
                </div>
                -->
                <div class="form-group m-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="AnnioProduction" class="control-label"></label>
                    <input asp-for="AnnioProduction" class="form-control" />
                    <span asp-validation-for="AnnioProduction" class="text-danger"></span>
                </div>

                <div class="form-group m-3">
                    <label class="control-label">Editorial</label>
                    <select asp-for="IdEditorial" class="form-select" aria-label="Default select example">
                        <option value="1">ESET</option>
                        <option value="2">Lectura y aprendizaje</option>
                        <option value="3">Nueva Era</option>
                        <option value="4">News Letter Academy</option>
                        <option value="5">Cóndor</option>
                    </select>
                    <span asp-validation-for="IdEditorial" class="text-danger"></span>
                </div>

                <div class="form-group m-3">
                    <label asp-for="Edition" class="control-label"></label>
                    <input asp-for="Edition" class="form-control" />
                    <span asp-validation-for="Edition" class="text-danger"></span>
                </div>

                <!--
                    No cargaron los datos de la base, supongo que es porque no trabajo las listas y
                    retornan como null.
                    Las llenaré con datos quemados
                -->
                <div class="form-group m-3">
                    <label class="control-label">País</label>
                    <select asp-for="IdCountry" class="form-select" aria-label="Default select example">
                        <option value="1">El Salvador</option>
                        <option value="2">Guatemala</option>
                        <option value="3">Panamá</option>
                        <option value="4">Estados Unidos</option>
                        <option value="5">Londres</option>
                    </select>
                    <span asp-validation-for="IdCountry" class="text-danger"></span>
                </div>

                <div class="form-group m-3">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group m-3">
                    <label asp-for="Busqueda" class="control-label"></label>
                    <input asp-for="Busqueda" class="form-control" />
                    <span asp-validation-for="Busqueda" class="text-danger"></span>
                </div>


                <div class="form-group mt-3 mb-3 text-center">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="List" class="btn btn-outline-info mt-3 mb-3">Back to List</a>
</div>

